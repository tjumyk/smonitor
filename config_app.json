{
  "server": {
    "host": "0.0.0.0",
    "port": 8999,
    "secret": "ChangeThis"
  },
  "manager": {
    "host": "localhost",
    "port": 6999,
    "mode": "supervisor"
  },
  "monitor": {
    "mode": "app",
    "site_name": "My Clusters",
    "interval": 3,
    "host_groups": [
      {
        "name": "Web Server",
        "hosts": [
          {
            "name": "web",
            "address": "localhost"
          }
        ]
      },
      {
        "name": "GPU Computing",
        "hosts": [
          {
            "name": "gpu1",
            "address": "gpu1.internal.com"
          },
          {
            "name": "gpu2",
            "address": "gpu2.internal.com"
          }
        ]
      },
      {
        "name": "Private Cloud",
        "hosts": [
          {
            "name": "db1",
            "address": "db1.internal.com"
          },
          {
            "name": "db2",
            "address": "db2.internal.com"
          },
          {
            "name": "mail",
            "address": "mail.internal.com"
          },
          {
            "name": "static",
            "address": "static.internal.com"
          },
          {
            "name": "process",
            "address": "proc.internal.com"
          }
        ]
      }
    ]
  }
}
